    "borderRadius": "2px",
  },
  "todohighlight.include": [
    "**/*.txt",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss"
