{
  "todohighlight.keywords": [
    {
      "text": "<-->",
      "color": "#ffffff",
      "backgroundColor": "rgba(0,0,0,.2)",
      "overviewRulerColor": "grey"
    },
    {
      "text": "-->",
      "color": "#ffffff",
      "backgroundColor": "rgba(0,0,0,.2)",
      "overviewRulerColor": "grey"
    },
    {
      "text": "&",
      "color": "#ffffff",
      "backgroundColor": "rgba(0,0,0,.2)",
      "overviewRulerColor": "grey"
    },
    {
      "text": "or",
      "color": "#ffffff",
      "backgroundColor": "rgba(0,0,0,.2)",
      "overviewRulerColor": "grey"
    }
  ],
  "todohighlight.keywordsPattern": "<-->|-->|&|or",
  "todohighlight.defaultStyle": {
  
    "color": "rgba(200, 250, 250, 0.5)",
    "backgroundColor": "rgba(10,10,10,.2)",
